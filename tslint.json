{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    
    "jsRules": {},
    "rules": {
        "duplicate-imports": true,
        "no-string-throw": true,
        "no-unused-expression": true,
        "no-duplicate-variable": true,
        "curly": true,
        "class-name": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": true,
        "no-unexternalized-strings": [
            true,
            {
                "signatures": [
                    "localize",
                    "nls.localize"
                ],
                "keyIndex": 0,
                "messageIndex": 1
            }
        ]
    },
    "rulesDirectory": [
        "tslint"
    ],
}